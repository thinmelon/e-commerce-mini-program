/* pages/entry/entry.wxss */

/* 用户信息 */

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

/* picker-view */

.picker-view {
    width: 100%;
    height: 150px;
}

.picker-view-column {
    line-height: 50px;
    text-align: center;
}

.business-list {
    margin-top: 50px;
}

.business {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    padding: 7px 0;
}

.business image {
    width: 32px;
    height: 32px;
    margin: 0 7px;
}

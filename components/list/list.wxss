/* components/list/list.wxss */

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 100rpx 0;
    box-sizing: border-box;
}

.collection {
    display: flex;
    flex-direction: row;
    width: 95%;
    margin: 10px 0;
}

.right {
    width: 100%;
    margin: 0 7px;
}

.operator {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 7px 0;
}
